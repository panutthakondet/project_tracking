@model ProjectTracking.Models.PhaseAssign
@using System.Globalization

@{
    Layout = null;
    var th = new CultureInfo("th-TH");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>บันทึกภายใน</title>

    <style>
        @@page {
            size: A4 portrait;
            margin-top: 25mm;
            margin-right: 20mm;
            margin-bottom: 20mm;
            margin-left: 30mm;
        }

        body {
            font-family: "TH Sarabun New", "TH SarabunPSK", "Sarabun", Tahoma, Arial;
            font-size: 16pt;
            line-height: 1.0;
        }

        .header {
            display: flex;
            align-items: center;
            margin-bottom: 4px;
        }

        .logo {
            width: 100px;
        }

        .company {
            margin-left: 10px;
            font-size: 14pt;
        }

        .company b {
            font-size: 16pt;
        }

        .title {
            text-align: center;
            font-size: 18pt;
            font-weight: bold;
            margin: 10px 0 6px;
        }

        .date {
            text-align: right;
            margin-bottom: 8px;
        }

        .row {
            margin-bottom: 6px;
        }

        .label {
            font-weight: bold;
        }

        .line {
            display: inline-block;
            min-width: 340px;
            border-bottom: 1px dotted #000;
            padding-left: 4px;
        }

        .text-value {
            padding-left: 4px;
        }

        .section {
            margin-top: 8px;
        }

        .comment-line {
            border-bottom: 1px dotted #000;
            height: 18px;
            margin-bottom: 4px;
        }

        .checkbox-row {
            margin: 8px 0;
        }

        .sign-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 14px;
            font-size: 16pt;
        }

        .sign-cell {
            border: 2px solid #000;
            padding: 10px 8px;
            text-align: center;
            vertical-align: middle;
            height: 85px;
        }

        .sign-full {
            height: 95px;
        }
    </style>
</head>

<body onload="window.print()">

    <!-- HEADER -->
    <div class="header">
        <img src="@Url.Content("~/images/auth/logosoat.png")" class="logo" />
        <div class="company">
            <b>SO-AT SOLUTION COMPANY LIMITED</b><br />
            165/57 Ramindra Road, Monument Sub-District, Bangkhen District, Bangkok 10220<br />
            Tel. 0-2059-0511
        </div>
    </div>

    <hr />

    <div class="title">บันทึกภายใน</div>

    <div class="date">
        วันที่ @DateTime.Now.ToString("dd MMMM yyyy", th)
    </div>

    <!-- CONTENT -->
    <div class="row">
        <span class="label">เรื่อง</span>
        ขออนุมัติตรวจงานการพัฒนาระบบ เพื่อขอเข้าทดสอบระบบ
        <span class="text-value">@Model.Role</span>
    </div>

    <div class="row">
        <span class="label">ชื่อโครงการ :</span>
        <span class="text-value">@Model.Phase?.Project?.ProjectName</span>
    </div>

    <div class="row">
        <span class="label">งวดที่ :</span>
        <span class="text-value">@Model.Phase?.PhaseOrder</span>
    </div>

    <div class="row">
        <span class="label">รายละเอียดงานในงวด :</span>
        <span class="text-value">@Model.Role</span>
    </div>

    <div class="row">
        <span class="label">ชื่อผู้รับผิดชอบโครงการ :</span>
        <span class="text-value">@Model.Employee?.EmpName</span>
    </div>

    <div class="section">
        <div class="row"><span class="label">ชื่อลิงก์ :</span><span class="text-value">@Model.Phase?.Project?.LinkName</span></div>
        <div class="row"><span class="label">ฐานข้อมูลที่ใช้ :</span><span class="text-value">@Model.Phase?.Project?.DatabaseName</span></div>
        <div class="row"><span class="label">ทะเบียนที่ใช้ทดสอบ :</span><span class="text-value">@Model.Phase?.Project?.TestAccount</span></div>
        <div class="row"><span class="label">Remote / URL / AnyDesk / IP :</span><span class="text-value">@Model.Phase?.Project?.RemoteUrl</span></div>
    </div>

    <!-- COMMENT -->
    <div class="section">
        <div class="label">ความคิดเห็น</div>
        @for (int i = 0; i < 4; i++)
        {
            <div class="comment-line"></div>
        }
    </div>

    <!-- RESULT -->
    <div class="checkbox-row">
        ☐ ผ่าน ☐ ไม่ผ่าน(ครั้งที่ 1) ☐ ไม่ผ่าน(ครั้งที่ 2)
    </div>

    <div class="row">
        ระยะเวลาแก้ไข <span class="line"></span>
    </div>

    <!-- SIGNATURE -->
    <table class="sign-table">
        <tr>
            <td class="sign-cell">
                ลงชื่อผู้พัฒนา<br /><br />
                ( @Model.Employee?.EmpName )<br />
                ตำแหน่ง @Model.Employee?.Position
            </td>

            <td class="sign-cell">
                ลงชื่อผู้รับเข้าทดสอบ<br /><br />
                ( @ViewBag.BusinessAnalyst?.EmpName )<br />
                ตำแหน่ง Business Analyst
            </td>
        </tr>

        <tr>
            <td class="sign-cell sign-full" colspan="2">
                ลงชื่อผู้จัดการโครงการ<br /><br />
                ( นายปณัฐกรณ์เดช เมืองจันทร์ )<br />
                ตำแหน่ง ผู้จัดการโครงการ
            </td>
        </tr>
    </table>

</body>
</html>