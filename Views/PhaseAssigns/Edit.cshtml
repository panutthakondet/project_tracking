@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const phaseSelect = document.querySelector('select[name="PhaseId"], select#PhaseId');
            const roleInput = document.querySelector('input[name="Role"], input#Role');
            if (!phaseSelect || !roleInput) return;

            // Track whether the user manually customized Role.
            // Role will auto-follow Phase only if the user hasn't customized it,
            // or if Role still equals the last auto-filled value.
            let roleTouched = false;
            let lastAutoRole = '';

            function getSelectedPhaseName() {
                const opt = phaseSelect.options[phaseSelect.selectedIndex];
                if (!opt) return '';
                const text = (opt.textContent || opt.innerText || '').trim();
                // Ignore placeholder option
                if (!text || text.startsWith('--')) return '';
                return text;
            }

            // Initialize lastAutoRole: if current Role equals current PhaseName, treat it as auto.
            (function initAutoRole() {
                const curPhaseName = getSelectedPhaseName();
                const curRole = (roleInput.value || '').trim();
                if (curPhaseName && curRole && curRole === curPhaseName) {
                    lastAutoRole = curRole;
                }
            })();

            roleInput.addEventListener('input', function () {
                roleTouched = true;
                // Once user types, stop auto-tracking
                lastAutoRole = '';
                // If user clears Role, allow auto again
                if (!roleInput.value || roleInput.value.trim() === '') {
                    roleTouched = false;
                }
            });

            function applyRoleFromPhase(force) {
                const name = getSelectedPhaseName();
                if (!name) return;

                const cur = (roleInput.value || '').trim();

                // Update Role if:
                // - forced
                // - user never typed
                // - Role is empty
                // - Role equals the previous auto-filled value
                if (force || !roleTouched || cur === '' || (lastAutoRole && cur === lastAutoRole)) {
                    roleInput.value = name;
                    lastAutoRole = name;
                }
            }

            let lastPhaseValue = phaseSelect.value;
            function onPhaseChanged() {
                if (phaseSelect.value !== lastPhaseValue) {
                    lastPhaseValue = phaseSelect.value;
                    applyRoleFromPhase(false);
                }
            }

            // Sync once on load IF Role empty OR equals selected Phase name
            const initialPhaseName = getSelectedPhaseName();
            const initialRole = (roleInput.value || '').trim();
            if (initialRole === '' || (initialPhaseName && initialRole === initialPhaseName)) {
                applyRoleFromPhase(true);
            }

            // Update on phase change (native)
            phaseSelect.addEventListener('change', function () {
                lastPhaseValue = phaseSelect.value;
                applyRoleFromPhase(false);
            });

            // Update on phase change (Select2/jQuery)
            if (window.jQuery) {
                try {
                    window.jQuery(phaseSelect).on('select2:select select2:clear', function () {
                        lastPhaseValue = phaseSelect.value;
                        applyRoleFromPhase(false);
                    });
                } catch (e) {
                    // ignore
                }
            }

            // Fallback: detect programmatic changes
            setInterval(onPhaseChanged, 300);
        })();
    </script>
