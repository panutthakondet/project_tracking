@model ProjectTracking.Models.ProjectIssue

@{
    ViewData["Title"] = "Edit Issue";
}

<h2 class="mb-3">‚úèÔ∏è Edit Project Issue</h2>

<form asp-action="Edit"
      method="post"
      enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <!-- Hidden Keys -->
    <input type="hidden" asp-for="IssueId" />
    <input type="hidden" asp-for="ProjectId" />

    <!-- ‚≠ê ‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç‡∏°‡∏≤‡∏Å : ‡∏Å‡∏±‡∏ô‡∏Ñ‡πà‡∏≤ Reopen ‡∏´‡∏≤‡∏¢‡∏ï‡∏≠‡∏ô Post -->
    <input type="hidden" asp-for="IsReopen" />
    <input type="hidden" asp-for="ReopenCount" />
    <input type="hidden" asp-for="LastFixedAt" />

    <!-- ================= Issue Name ================= -->
    <div class="mb-3">
        <label asp-for="IssueName" class="form-label"></label>
        <input asp-for="IssueName" class="form-control" />
        <span asp-validation-for="IssueName" class="text-danger"></span>
    </div>

    <!-- ================= Owner ================= -->
    <div class="mb-3">
        <label asp-for="EmpId" class="form-label">Owner (Employee)</label>

        <select asp-for="EmpId"
                asp-items="ViewBag.Employees"
                class="form-select">
            <option value="">-- Select Employee --</option>
        </select>

        <span asp-validation-for="EmpId" class="text-danger"></span>
    </div>

    <!-- ================= Status ================= -->
    <div class="mb-3">
        <label asp-for="IssueStatus" class="form-label">Status</label>
        <select asp-for="IssueStatus"
                asp-items="ViewBag.StatusList"
                class="form-select">
        </select>
        <span asp-validation-for="IssueStatus" class="text-danger"></span>
    </div>

    <!-- ================= Priority ================= -->
    <div class="mb-3">
        <label asp-for="IssuePriority" class="form-label">Priority</label>
        <select asp-for="IssuePriority" class="form-select">
            <option value="NORMAL">Normal</option>
            <option value="URGENT">Urgent</option>
        </select>
    </div>

    <!-- ‚úÖ NEW (READ ONLY): CreatedAt -->
    <div class="mb-3">
        <label asp-for="CreatedAt" class="form-label">Created At</label>
        <input asp-for="CreatedAt" type="datetime-local" class="form-control" readonly />
        <small class="text-muted">* ‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏≠‡πâ‡∏≤‡∏á‡∏≠‡∏¥‡∏á (‡πÅ‡∏Å‡πâ‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ)</small>
    </div>

    <!-- ===================================================== -->
    <!-- üîÅ ISSUE HISTORY (READ ONLY) -->
    <!-- ===================================================== -->
    <div class="mb-4 p-3 border rounded bg-light">

        <div class="fw-semibold mb-2">üìä Issue History</div>

        <div class="row small">

            <div class="col-md-4">
                <div class="text-muted">Reopen Status</div>
                @if (Model.IsReopen)
                {
                    <span class="badge bg-danger">REOPEN</span>
                }
                else
                {
                    <span class="badge bg-success">NORMAL</span>
                }
            </div>

            <div class="col-md-4">
                <div class="text-muted">Reopen Count</div>
                <span class="fw-bold">@Model.ReopenCount ‡∏Ñ‡∏£‡∏±‡πâ‡∏á</span>
            </div>

            <div class="col-md-4">
                <div class="text-muted">Last Fixed</div>
                @if (Model.LastFixedAt != null)
                {
                    <span class="text-success fw-semibold">
                        @Model.LastFixedAt?.ToString("dd/MM/yyyy HH:mm")
                    </span>
                }
                else
                {
                    <span class="text-muted">‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡πÄ‡∏Ñ‡∏¢ Fix</span>
                }
            </div>

        </div>

        <hr class="my-2"/>

        <small class="text-muted">
            üí° ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏à‡∏≤‡∏Å FIXED/PASS ‚Üí OPEN/WIP ‡∏£‡∏∞‡∏ö‡∏ö‡∏à‡∏∞‡∏ô‡∏±‡∏ö Reopen ‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥
        </small>

    </div>

    <!-- ===================================================== -->
    <!-- üßæ BEFORE IMAGES -->
    <!-- ===================================================== -->
    @if (Model.Images != null && Model.Images.Any())
    {
        <div class="mb-4">
            <label class="form-label fw-bold text-primary">
                üßæ Issue Images (Before Fix)
            </label>

            <div class="d-flex flex-wrap gap-2 border rounded p-2 bg-light">
                @foreach (var img in Model.Images)
                {
                    <a href="@img.FilePath" target="_blank">
                        <img src="@img.FilePath"
                             class="img-thumbnail"
                             style="width:140px;height:140px;object-fit:cover;" />
                    </a>
                }
            </div>
        </div>
    }

    <!-- ===================================================== -->
    <!-- üîß AFTER IMAGES -->
    <!-- ===================================================== -->
    @if (Model.FixImages != null && Model.FixImages.Any())
    {
        <div class="mb-4">
            <label class="form-label fw-bold text-success">
                üîß Fix Result Images (After Fix)
            </label>

            <div class="d-flex flex-wrap gap-2 border rounded p-2 bg-white">
                @foreach (var img in Model.FixImages)
                {
                    <a href="@img.FilePath" target="_blank">
                        <img src="@img.FilePath"
                             class="img-thumbnail border-success"
                             style="width:140px;height:140px;object-fit:cover;" />
                    </a>
                }
            </div>
        </div>
    }

    <!-- ================= Actions ================= -->
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            üíæ Save
        </button>

        <a asp-action="Index"
           asp-route-projectId="@Model.ProjectId"
           class="btn btn-secondary ms-2">
            ‚Ü© Back
        </a>
    </div>

</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}