@section Scripts{
    <!-- ‚úÖ SortableJS (Drag & Drop Reorder Rows) -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js"></script>

    <script>
    document.addEventListener("DOMContentLoaded", function () {

        // =========================
        // Project search dropdown
        // =========================
        const searchInput = document.getElementById("projectSearch");
        const dropdown = document.getElementById("projectDropdown");
        const hiddenSelect = document.getElementById("hiddenProjectSelect");

        if (searchInput && dropdown && hiddenSelect) {
            const options = Array.from(hiddenSelect.options);

            function renderList(filter = "") {
                dropdown.innerHTML = "";

                const filtered = options.filter(o =>
                    o.text.toLowerCase().includes(filter.toLowerCase()) &&
                    o.value !== ""
                );

                if (filtered.length === 0) {
                    dropdown.style.display = "none";
                    return;
                }

                filtered.forEach(o => {
                    const item = document.createElement("a");
                    item.className = "list-group-item list-group-item-action";
                    item.textContent = o.text;

                    item.onclick = function () {
                        searchInput.value = o.text;
                        hiddenSelect.value = o.value;
                        dropdown.style.display = "none";
                        searchInput.closest("form").submit();
                    };

                    dropdown.appendChild(item);
                });

                dropdown.style.display = "block";
            }

            searchInput.addEventListener("input", function () {
                renderList(this.value);
            });

            searchInput.addEventListener("focus", function () {
                renderList(this.value);
            });

            document.addEventListener("click", function (e) {
                if (!searchInput.contains(e.target) && !dropdown.contains(e.target)) {
                    dropdown.style.display = "none";
                }
            });
        }

        // =========================
        // Drag & Drop reorder rows
        // =========================
        const tbody = document.getElementById("phaseTbody");
        if (!tbody) return;

        // Anti-forgery token (from hidden form #antiForm)
        const token = document.querySelector('#antiForm input[name="__RequestVerificationToken"]')?.value;

        // helper: update No. column (1..N) after drag
        function refreshRowNumbers() {
            const rows = tbody.querySelectorAll('tr[data-phase-id]');
            let i = 1;
            rows.forEach(tr => {
                const noSpan = tr.querySelector('td.phase-sort-cell span.ms-2');
                if (noSpan) noSpan.textContent = String(i++);
            });
        }

        new Sortable(tbody, {
            animation: 150,
            handle: ".phase-drag-handle", // drag by hamburger icon
            ghostClass: "table-active",
            onEnd: async function () {
                refreshRowNumbers();

                // Collect phase ids in new order
                const phaseIds = Array.from(tbody.querySelectorAll('tr[data-phase-id]'))
                    .map(tr => parseInt(tr.getAttribute('data-phase-id')))
                    .filter(n => !Number.isNaN(n));

                const projectId = parseInt(tbody.getAttribute('data-project-id'));

                // If no projectId or no ids, stop.
                if (Number.isNaN(projectId) || phaseIds.length === 0) return;

                // Persist order (optional): calls ProjectPhasesController.Reorder
                // If you don't have this action yet, nothing will break visually; it will just fail to save.
                try {
                    const res = await fetch("@Url.Action("Reorder", "ProjectPhases")", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            ...(token ? { "RequestVerificationToken": token } : {})
                        },
                        body: JSON.stringify({ projectId, phaseIds })
                    });

                    if (!res.ok) {
                        console.warn("Reorder save failed", await res.text());
                    }
                } catch (err) {
                    console.warn("Reorder save error", err);
                }
            }
        });

    });
    </script>
