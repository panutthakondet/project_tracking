@section Scripts{
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function () {

    const searchInput = document.getElementById("projectSearch");
    const dropdown = document.getElementById("projectDropdown");
    const hiddenSelect = document.getElementById("hiddenProjectSelect");

    const options = Array.from(hiddenSelect.options);

    function renderList(filter = "") {

        dropdown.innerHTML = "";

        const filtered = options.filter(o =>
            o.text.toLowerCase().includes(filter.toLowerCase()) &&
            o.value !== ""
        );

        if (filtered.length === 0) {
            dropdown.style.display = "none";
            return;
        }

        filtered.forEach(o => {

            const item = document.createElement("a");
            item.className = "list-group-item list-group-item-action";
            item.textContent = o.text;

            item.onclick = function () {
                searchInput.value = o.text;
                hiddenSelect.value = o.value;
                dropdown.style.display = "none";
                searchInput.closest("form").submit();
            };

            dropdown.appendChild(item);
        });

        dropdown.style.display = "block";
    }

    searchInput.addEventListener("input", function () {
        renderList(this.value);
    });

    searchInput.addEventListener("focus", function () {
        renderList(this.value);
    });

    document.addEventListener("click", function (e) {
        if (!searchInput.contains(e.target) &&
            !dropdown.contains(e.target)) {
            dropdown.style.display = "none";
        }
    });

    // =============================
    // Drag & Drop Reorder (PhaseSort)
    // =============================
    const tbody = document.getElementById("phaseTbody");
    if (tbody) {
        const projectId = tbody.dataset.projectId;
        const tokenEl = document.querySelector('#antiForm input[name="__RequestVerificationToken"]');
        const token = tokenEl ? tokenEl.value : "";

        function renumberPhaseSort() {
            const rows = Array.from(tbody.querySelectorAll('tr[data-phase-id]'));
            rows.forEach((tr, idx) => {
                const cell = tr.querySelector('.phase-sort-cell');
                if (cell) cell.textContent = String(idx + 1);
            });
        }

        async function saveOrder() {
            const ids = Array.from(tbody.querySelectorAll('tr[data-phase-id]'))
                .map(tr => parseInt(tr.getAttribute('data-phase-id'), 10))
                .filter(n => !Number.isNaN(n));

            const payload = { projectId: parseInt(projectId, 10), phaseIds: ids };

            const res = await fetch("@Url.Action("Reorder", "ProjectPhases")", {
                method: "POST",
                credentials: "same-origin",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken": token
                },
                body: JSON.stringify(payload)
            });

            if (!res.ok) {
                let msg = "";
                try { msg = await res.text(); } catch { }
                alert("‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏•‡∏≥‡∏î‡∏±‡∏ö‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: " + res.status + "\n" + msg);
                return;
            }
        }

        // Load SortableJS (assume included in layout OR via CDN below)
        if (window.Sortable) {
            Sortable.create(tbody, {
                animation: 150,
                handle: '.phase-sort-cell',
                onEnd: async function () {
                    renumberPhaseSort();
                    await saveOrder();
                }
            });
        } else {
            console.warn("SortableJS not found. Please include SortableJS.");
        }
    }

});
</script>
}